{
  "Routes": [
    {
      "Name": "Product Service",
      "Summary": "Product Informations",
      "DownstreamPathTemplate": "/api/Product/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "UpstreamPathTemplate": "/gateway/products/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ]
    },
    {
      "Name": "Inventory Service",
      "Summary": "Get booking information",
      "DownstreamPathTemplate": "/api/inventory/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7120
        }
      ],
      "UpstreamPathTemplate": "/gateway/inventory/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ]
    },
    {
      "Name": "Price Service",
      "Summary": "Get booking information",
      "DownstreamPathTemplate": "/api/price/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7248
        }
      ],
      "UpstreamPathTemplate": "/gateway/price/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    {
      "Name": "User Service",
      "Summary": "User Login and Register",
      "DownstreamPathTemplate": "/api/user/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7233
        }
      ],
      "UpstreamPathTemplate": "/gateway/user/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "DangerousAcceptAnyServerCertificateValidator": true
    }
  ]
}